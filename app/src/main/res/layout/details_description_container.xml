<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/details_description_outline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/text_description"
        android:textSize="13sp"
        android:text="9th-generation 6-Core Intel Core i7 Processor. Brilliant Retina Display with True Tone technology. Comes with Touch Bar and Touch ID. Radeon Pro 555x Graphics with 4GB of video Memory Ultrafast SSD. Intel UHD Graphics 630 Four Thunderbolt 3 (USB-C) ports. Up to 10 hours of battery life. 802. 11AC Wi-Fi and a Force touch trackpad."
        app:layout_constraintEnd_toEndOf="@id/outline"
        app:layout_constraintStart_toStartOf="@id/outline"
        app:layout_constraintBottom_toBottomOf="@id/outline"
        app:layout_constraintTop_toTopOf="@id/outline"
        android:layout_width="259dp"
        android:layout_height="137dp" />

    <ImageView
        android:id="@+id/dot_center"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/dot_not_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/dot_left"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/dot_not_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dot_center"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/dot_right"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/dot_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dot_center"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>